<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/gpfRoot">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/nepaliDateList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gpfMonth"/>

    <!--START: Year Button-->
    <ImageButton
            android:elevation="4dp"
            android:padding="4dp"
            android:layout_width="48dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_back"
            android:id="@+id/gpfPrevYear"
            app:layout_constraintTop_toTopOf="@+id/gpfYear"
            app:layout_constraintBottom_toTopOf="@+id/gpfMonth" app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
            android:elevation="4dp"
            android:padding="4dp"
            android:layout_width="48dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_next"
            android:id="@+id/gpfNextYear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gpfPrevYear"
            app:layout_constraintBottom_toTopOf="@+id/gpfPrevMonth"/>
    <!--END: Year Button-->

    <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:background="@android:color/black"
            android:layout_height="wrap_content"
            android:id="@+id/gpfYear"
            android:textSize="30sp" android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    <!--START: Month Buttons-->
    <ImageButton
            android:elevation="4dp"
            android:layout_width="48dp"
            android:padding="4dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_next"
            android:id="@+id/gpfNextMonth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gpfMonth" app:layout_constraintBottom_toBottomOf="@+id/gpfMonth"/>
    <ImageButton
            android:elevation="4dp"
            android:layout_width="48dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:padding="4dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_back"
            android:id="@+id/gpfPrevMonth"
            app:layout_constraintTop_toTopOf="@+id/gpfMonth" app:layout_constraintBottom_toBottomOf="@+id/gpfMonth"
            app:layout_constraintStart_toStartOf="parent"/>
    <!--END: Month Buttons-->

    <TextView
            android:layout_width="0dp"
            android:background="#7f8c8d"
            android:textAllCaps="true"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/gpfMonth"
            app:layout_constraintTop_toBottomOf="@+id/gpfYear" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <!--START: Action Buttons -->
    <Button
            android:text="Cancel"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:id="@+id/gpfCancel"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            app:layout_constraintTop_toBottomOf="@+id/nepaliDateList"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="1dp"/>
    <View android:layout_width="1dp"
          android:id="@+id/view" android:layout_height="1dp"
          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@+id/gpfCancel" android:layout_marginBottom="8dp"
          app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Confirm"
            android:background="@android:color/black"
            android:layout_width="0dp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:id="@+id/gpfConfirm"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            app:layout_constraintTop_toTopOf="@+id/gpfCancel"
            app:layout_constraintBottom_toBottomOf="@+id/gpfCancel" app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="1dp"/>
    <!--END: Action Buttons -->

</androidx.constraintlayout.widget.ConstraintLayout>